doctype html
html
    head
        //bootstrap css
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        script(src="js/bootstrap.min.js")
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

    body

        
        .container
            .col
                .row
                    h1.m-4 Converter:
            .row.m-4.bg-dark.rounded.text-white
                .row.p-4.m-4
                    div(class="btn-group" role="group")
                        .col
                            input(type="radio" class="btn-check" name="btnradio" id="r2a" autocomplete="off" checked)
                            label(class="btn btn-outline-primary" for="r2a") Relative to Absolute

                            input(type="radio" class="btn-check" name="btnradio" id="a2r" autocomplete="off")
                            label(class="btn btn-outline-primary" for="a2r") Absolute to Relative

                .row.p-4.m-4
                    .col
                        div(class="btn-group" role="group")
                            input(type="radio" class="btn-check" name="btnradio1" id="vw" autocomplete="off" checked)
                            label(class="btn btn-outline-primary" for="vw") vw

                            input(type="radio" class="btn-check" name="btnradio1" id="vh" autocomplete="off")
                            label(class="btn btn-outline-primary" for="vh") vh

                
                .row.p-4.m-4
                    .row
                        .col-auto
                            input.form-control#amt
                        .col-auto#convert
                            button.column.btn.btn-primary.submit#submit Convert
                    

                .row.p-4.m-4
                    h1.output#output 


        
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
    script(src="./index.js")
    